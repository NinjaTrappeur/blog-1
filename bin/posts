#!/bin/sh -e
#
# Create the list of posts.
#

for post in $(find public -mindepth 2 -type f -name '*.md' | sort -r); do
    url=$(echo "$post" | sed 's,public/,,;s/\.md$/\.html/')
    date=$(date -d "$(echo "$url" | head -c10)" '+%B %d, %Y')
    title=$(head -2 "$post" | bin/title | head -1)

    echo "* <small>$date</small> [$title]($url)"
done
