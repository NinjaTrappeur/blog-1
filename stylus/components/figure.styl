figure
  margin-left 0
  margin-right 0

  img, object
    display block
    max-width 100%

  @media all and (max-width bp-medium)
    img
      margin 0 auto

  @media not all and (max-width bp-medium)
    margin 0 0 .5em 0

    &.left
      float left
      margin-right 1em

    &.right
      float right
      margin-left 1em

  &.center
    margin-left auto
    margin-right auto
    text-align center

    img
      margin 0 auto

  &.inline
    img
      display inline-block
